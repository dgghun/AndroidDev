<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
    </style>

    <!-- my style for TV header-->
    <style name="MyStyle_header_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- my style for TV sub-header-->
    <style name="MyStyle_subHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- my style for ET paragraph-->
    <style name="MyStyle_paragraph">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/paper</item>
    </style>



    </resources>