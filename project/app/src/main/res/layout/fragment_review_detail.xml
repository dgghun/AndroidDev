<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".reviewDetailActivityFragment"
    tools:showIn="@layout/activity_review_detail"> <!-- This is the associated activity-->

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/MyStyle_header_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_detail_header"
        android:id="@+id/reviewHeader_editText"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_image"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView_happyFace"
        android:layout_below="@+id/reviewHeader_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
         />

    <EditText
        style="@style/MyStyle_paragraph"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="@string/review_detail_paragraph"
        android:layout_below="@+id/imageView_happyFace"
        android:id="@+id/reviewParagraph_edit_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"/>

    <TextView
        style="@style/MyStyle_subHeader"
        android:text="TextView"
        android:id="@+id/detail_review_name"
        android:layout_toRightOf="@+id/imageView_happyFace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView_happyFace"
        android:layout_alignBottom="@+id/imageView_happyFace"
        android:textStyle="normal|bold" />

</RelativeLayout>
