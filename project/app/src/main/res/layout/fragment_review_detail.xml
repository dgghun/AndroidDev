<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".reviewDetailActivityFragment"
    tools:showIn="@layout/activity_review_detail"> <!-- This is the associated activity-->

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/MyStyle_header_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_detail_header"
        android:id="@+id/reviewHeader_editText"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_image"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView_happyFace"
        android:layout_below="@+id/reviewHeader_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
         />

    <EditText
        style="@style/MyStyle_paragraph"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="@string/review_detail_paragraph"
        android:layout_below="@+id/imageView_happyFace"
        android:id="@+id/reviewParagraph_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/button_saveReview"
        />

    <EditText
        style="@style/MyStyle_subHeader"
        android:hint="@string/review_title"
        android:id="@+id/reviewTitle_editText"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/imageView_happyFace"
        android:layout_alignTop="@+id/imageView_happyFace"
        android:layout_alignBottom="@+id/imageView_happyFace"
        android:textStyle="normal|bold"
        android:layout_alignRight="@+id/reviewParagraph_edit_text"
        android:layout_alignEnd="@+id/reviewParagraph_edit_text" />

    <Button
        android:id="@+id/button_saveReview"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Button_save_review"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/reviewParagraph_edit_text"
        android:layout_alignEnd="@+id/reviewParagraph_edit_text"
        android:layout_alignLeft="@+id/reviewParagraph_edit_text"
        android:layout_alignStart="@+id/reviewParagraph_edit_text" />

</RelativeLayout>
